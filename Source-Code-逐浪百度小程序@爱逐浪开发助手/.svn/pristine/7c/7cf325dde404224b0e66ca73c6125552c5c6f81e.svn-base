#new{
    width: 750rpx;
    height: auto;
    /* background-color: #f5f5f5; */
    background: #ffffff;
    margin: 20rpx auto 0;
    padding-bottom: 30rpx;
    overflow: hidden;
}
.new{
    width: 690rpx;
    margin: 40rpx auto 0;
    height: auto;
}
.div_text{
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.div_text_span{
    width: 100%;
    font-size: 36rpx;
    color: #212121;
    text-align: center;
    font-weight: bold;
}
.div_text_p{
    width: 100%;
    font-size: 24rpx;
    color: #999999;
    text-align: center;
}
.new_list{
    width: 690rpx;
    height: auto;
    margin: 45rpx auto 0;
}
.new_list_01{
    width: 100%;
    height: 136rpx;
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
}
.new_list_01:last-of-type{
    margin-bottom: 0;
}
.new_list_01_img{
    display: block;
    width: 260rpx;
    height: 136rpx;
    border-radius: 8rpx;
}
.new_list_01_div{
    height: 134rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 30rpx;
    border-bottom: 2rpx solid #EEEEEE;
}
.new_list_01_div_span{
    width: 100%;
    font-size: 28rpx;
    color: #212121;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.new_list_01_div_time{
    font-size: 26rpx;
    color: #bbbbbb;
    line-height: 26rpx;
    margin-bottom: 15rpx;
}
